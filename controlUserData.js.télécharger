function bannerHomeActive(e,t){var n=new Date,t=""!==t?new Date(t.update):null;null!==t&&t.getTime()>n.getTime()?e.classList.add("hidden"):e.classList.remove("hidden")}function bannerActive(e){e.classList.remove("hidden")}function bannerHide(e){e.classList.add("hidden")}function setYes(){var e=new Date,e=(e.setTime(e.getTime()+2592e6),JSON.stringify({name:"yes",update:e}));localStorage.setItem("isAdult",e),document.location.reload()}function setNo(){var e=new Date,e=(e.setTime(e.getTime()+864e5),JSON.stringify({name:"no",update:e}));localStorage.setItem("isAdult",e),document.location.reload()}function setNews(){var e=new Date,t=localStorage.getItem("isAdult")??null,t=t?JSON.parse(t):{name:"no",update:e};t.news=!t.news,localStorage.setItem("isAdult",JSON.stringify(t)),document.location.reload()}function setOddsFormat(e){var t=new Date,n=localStorage.getItem("isAdult")??null,n=n?JSON.parse(n):{name:"no",update:t};n.oddsFormat=e,localStorage.setItem("isAdult",JSON.stringify(n)),document.location.reload()}document.addEventListener("DOMContentLoaded",function(){event.preventDefault();let e=document.querySelector(".banner-bet-warning");var t=document.querySelector(".bet-banner-ls"),n=document.querySelectorAll(".btn-livebet")??null,a=document.getElementById("betsTab"),d=document.getElementById("legalText"),l=localStorage.getItem("isAdult")??"",l=""!==l?JSON.parse(l):{name:null,update:null,news:!1,oddsFormat:1},o=document.getElementById("BS_MOBILE_TOP"),s=document.getElementById("buttonUnder"),c=document.getElementById("buttonOver");let i=document.getElementById("adultTab"),r=document.getElementById("menorTab");var u=document.getElementById("activatedNews"),m=document.querySelectorAll(".horizontal-new-card.panel-body");let g=document.getElementById("changeOddsFormat");null!==l.name||null!==legalInfo.popup&&null!==legalInfo.popup.legalAge||setYes(),l.news&&(u.setAttribute("checked",!0),m.forEach(e=>{e.classList.remove("hidden")})),l.oddsFormat&&document.getElementById("oddsFormat"+l.oddsFormat).setAttribute("selected",!0),null!==n&&"yes"===l.name&&n.forEach(e=>{bannerActive(e)}),e,null!==e&&(bannerHomeActive(e,l),document.getElementById("under_age").addEventListener("click",function(){setNo(),bannerHide(e)}),document.getElementById("over_age").addEventListener("click",function(){setYes(),bannerHide(e)})),null!==t&&"yes"===l.name&&(bannerActive(t),null!=o&&o.remove(),null!==d)&&bannerActive(d),null!==a&&"yes"===l.name&&(bannerActive(a),editOddsFormat()),"no"===l.name&&(i.classList.remove("active"),r.classList.add("active")),c.addEventListener("click",function(){r.classList.remove("active"),i.classList.add("active"),setYes()}),s.addEventListener("click",function(){i.classList.remove("active"),r.classList.add("active"),setNo()}),u.addEventListener("change",e=>{setNews()}),g.addEventListener("change",()=>{setOddsFormat(g.value)})});